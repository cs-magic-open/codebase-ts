// 这个 tsconfig.json 不要乱改，很重要，否则 wechaty 的一些深导入会报错
// ref: https://chat.openai.com/c/3060f743-1120-4bbc-87a2-2aa3b42968a6

{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    /* Bundled projects */
    "noEmit": true,
    "module": "ESNext",
    "incremental": true,
    /* Path Aliases */
    "baseUrl": "./",
    "paths": {
//      "*": [
//        "node_modules/*"
//      ]
    }
  },
//    "include": [
//      "../../**/*.ts"
  //    ".eslintrc.cjs",
  //    "next-env.d.ts",
  //    "**/*.ts",
  //    "**/*.tsx",
  //    "**/*.cjs",
  //    "**/*.js",
  //    ".next/types/**/*.ts",
  //    ".next-tmp/types/**/*.ts"
//    ],
    "exclude": [
      "node_modules",

      // 因为我们 redeclare 了 wechaty 的接口，所以要忽略，否则编译不通过
      "../../opensource/puppet-padlocal",
    ]
}
