{
  "name": "@cs-magic/swot-bot",
  "version": "0.1.0",
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "exports": {
    ".": "./dist/src/index.js",
    "./*": "./dist/src/*.js"
  },
  "scripts": {
    "_tsx": "DOTENV_CONFIG_PATH=../../.env tsx -r dotenv/config",
    "dev:watch": "yarn _tsx watch src/index.ts",
    "dev": "yarn _tsx src/index.ts",
    "test": "jest",
    "build": "rm -rf dist && tsc -b",
    "start": "node --experimental-specifier-resolution=node ./dist/src/index.js | pino-pretty"
  },
  "dependencies": {
    "@cs-magic/common": "workspace:^",
    "@cs-magic/llm": "workspace:^",
    "@cs-magic/swot-core": "workspace:^",
    "@cs-magic/wechat": "workspace:^",
    "node-schedule": "^2.1.1",
    "qrcode-terminal": "^0.12.0",
    "wechat4u": "workspace:^",
    "wechaty": "^1.20.2",
    "wechaty-puppet": "workspace:^",
    "wechaty-puppet-padlocal": "workspace:^",
    "wechaty-puppet-wechat4u": "workspace:^"
  },
  "devDependencies": {
    "@types/node-schedule": "^2.1.7"
  }
}
