{
  "name": "@cs-magic/swot-bot",
  "version": "0.1.0",
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "main": "./dist/esm/src/index.js",
  "exports": {
    ".": "./dist/esm/src/index.js",
    "./schema": "./dist/esm/src/schema/index.js"
  },
  "scripts": {
    "dev": "DOTENV_CONFIG_PATH=../../.env tsx -r dotenv/config src/main.ts",
    "build": "rm -rf dist && tsc -b",
    "build:cjs": "tsc -b tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "start": "node ./dist/src/main.js | pino-pretty",
    "test": "jest",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "@cs-magic/common": "workspace:^",
    "@cs-magic/llm": "workspace:^",
    "@cs-magic/swot-core": "workspace:^",
    "@cs-magic/wechat": "workspace:^",
    "node-schedule": "^2.1.1",
    "qrcode-terminal": "^0.12.0",
    "wechat4u": "workspace:^",
    "wechaty": "workspace:^",
    "wechaty-puppet": "workspace:^",
    "wechaty-puppet-wechat4u": "workspace:^"
  },
  "devDependencies": {
    "@types/node-schedule": "^2.1.7"
  }
}
