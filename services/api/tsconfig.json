{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../..",
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": [
//    "src/**/*.ts",
//    "../common-wechaty/**/*.ts",
    "**/*.ts",
    "node_modules/.prisma"
  ],
  "exclude": ["node_modules"]
}
