{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,


    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,


    /* Bundled projects */
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",

//    "moduleDetection": "force",
//    "lib": [
//      "dom",
//      "dom.iterable",
//      "ES2022"
//    ],
    /* Path Aliases */
    "baseUrl": ".",
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    ".next-tmp/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
