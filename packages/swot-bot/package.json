{
  "name": "@cs-magic/swot-bot",
  "version": "0.1.0",
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./schema": "./dist/schema/index.js",
    "./backend": "./dist/backend/index.js",
    "./*": "./*"
  },
  "scripts": {
    "postinstall": "yarn build",
    "dev:bot": "DOTENV_CONFIG_PATH=../../.env tsx -r dotenv/config src/main.ts | pino-pretty",
    "dev:backend": "DOTENV_CONFIG_PATH=../../.env tsx -r dotenv/config src/backend/main.ts | pino-pretty",
    "clean": "rm -rf dist",
    "build": "tsc -b",
    "start:bot": "node ./dist/main.js | pino-pretty",
    "start:backend": "node ./dist/backend/main.js | pino-pretty",
    "test": "jest"
  },
  "dependencies": {
    "@cs-magic/common": "workspace:^",
    "@cs-magic/llm": "workspace:^",
    "@cs-magic/swot-core": "workspace:^",
    "@fastify/websocket": "^10.0.1",
    "fastify": "^4.28.1",
    "node-schedule": "^2.1.1",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "workspace:^",
    "wechaty-puppet": "workspace:^"
  },
  "devDependencies": {
    "@types/node-schedule": "^2.1.7"
  }
}
