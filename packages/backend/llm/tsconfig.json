{
  "extends": [
    "@cs-magic/ts-config/dom"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["jest", "node"],
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.yml"
  ],
  "references": [
    {"path": "../common"}
  ]
}
