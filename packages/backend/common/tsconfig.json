{
  "extends": [
    "@cs-magic/ts-config/node"
  ],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ]
}
