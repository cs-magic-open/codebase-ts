{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist/esm",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/"
  ],
  "include": [
    "bin/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../wechaty-puppet"
    }
  ]
}
