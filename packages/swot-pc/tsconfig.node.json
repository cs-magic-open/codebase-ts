{
  "extends": [
    "../../tsconfig.node.json",
    "@electron-toolkit/tsconfig/tsconfig.node.json"
  ],
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,

    "types": [
      "electron-vite/node"
    ],

    "noUnusedLocals": false,

//    "module": "NodeNext",
//    "moduleResolution": "NodeNext",

    "esModuleInterop": true
  }
}
