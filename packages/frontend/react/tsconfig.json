    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
        "./public/*"
      ],
      "@assets/*": [
        "../../../assets/*"
      ]
    }
  },
  "include": ["src"],
  "references": [
    {"path": "../../backend/common"},
    {"path": "../../backend/llm"},
    {"path": "../common"},
    {"path": "../shadcn"}
  ]
}
