{
  "extends": [
    "@cs-magic/ts-config/dom"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
        "./public/*",
        "../../assets/*",
        "../../*"
      ]
    },

    // suppress chart / input-otp
    "strictNullChecks": false
  },
  "include": [
    "src"
  ],
  "references": [
    {"path": "../common"}
  ]
}
