{
  "name": "AIGC-Enhancer",
  "version": "0.1.1",
  "manifest_version": 3,
  "description": "Download SVG images from Claude.ai as PNG",
  "author": "南川 <mark@cs-magic.com>",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://www.claudeusercontent.com/*"
  ],
  "icons": {
    "16": "assets/icon128.png",
    "48": "assets/icon128.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["dist/main.js"]
    },
    {
      "matches": ["https://www.claudeusercontent.com/*"],
      "js": ["dist/iframe.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/main.css"],
      "matches": ["https://claude.ai/*"]
    }
  ]
}
